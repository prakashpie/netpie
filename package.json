{
  "name": "@netpie/root",
  "version": "1.0.0",
  "description": "Netpie application with backend API",
  "private": true,
  "workspaces": [
    "services/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "npm run dev -w @netpie/express-api",
    "dev:client": "npm run dev -w @netpie/react-app",
    "dev:backend": "npm run dev -w @netpie/express-api",
    "dev:all": "concurrently \"npm run dev:backend\" \"npm run dev:client\" --names \"backend,client\" --prefix-colors \"blue,green\"",
    "build:all": "npm run build -ws",
    "build:server": "npm run build -w @netpie/express-api",
    "build:client": "npm run build -w @netpie/react-app",
    "start": "npm start -w @netpie/express-api",
    "test": "npm test -ws",
    "test:watch": "npm run test:watch -w @netpie/express-api",
    "test:coverage": "npm run test:coverage -w @netpie/express-api",
    "test:client": "npm test -w @netpie/react-app",
    "test:client:watch": "npm run test:watch -w @netpie/react-app",
    "test:client:coverage": "npm run test:coverage -w @netpie/react-app",
    "lint": "npm run lint -ws",
    "lint:server": "npm run lint -w @netpie/express-api",
    "lint:client": "npm run lint -w @netpie/react-app",
    "format": "npm run format -w @netpie/express-api",
    "docker:build": "npm run docker:build -w @netpie/express-api",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "db:start": "npm run db:start -w @netpie/express-api",
    "db:stop": "npm run db:stop -w @netpie/express-api",
    "install:all": "npm install -ws",
    "setup": "npm install -ws"
  },
  "keywords": [
    "todo",
    "backend",
    "nodejs",
    "typescript",
    "monorepo"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@tsconfig/node22": "^22.0.2",
    "concurrently": "^9.2.0",
    "eslint": "^9.35.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  }
}
