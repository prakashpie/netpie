{
  "name": "@netpie/root",
  "version": "1.0.0",
  "description": "Netpie application with backend API",
  "private": true,
  "packageManager": "npm@11.5.2",
  "scripts": {
    "dev:client": "cd apps/netpie-react-app && npm run dev",
    "dev:server": "cd services/netpie-express-api && npm run dev",
    "dev:all": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "build:server": "cd services/netpie-express-api && npm run build",
    "build:client": "cd apps/netpie-react-app && npm run build",
    "start": "cd services/netpie-express-api && npm start",
    "test:watch": "cd services/netpie-express-api && npm run test:watch",
    "test:coverage": "cd services/netpie-express-api && npm run test:coverage",
    "test:client": "cd apps/netpie-react-app && npm test",
    "test:client:watch": "cd apps/netpie-react-app && npm run test:watch",
    "test:client:coverage": "cd apps/netpie-react-app && npm run test:coverage",
    "lint:server": "cd services/netpie-express-api && npm run lint",
    "lint:client": "cd apps/netpie-react-app && npm run lint",
    "format": "cd services/netpie-express-api && npm run format",
    "docker:build": "cd services/netpie-express-api && npm run docker:build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "db:start": "cd services/netpie-express-api && npm run db:start",
    "db:stop": "cd services/netpie-express-api && npm run db:stop",
    "install:server": "cd services/netpie-express-api && npm install",
    "install:client": "cd apps/netpie-react-app && npm install",
    "install:all": "concurrently \"npm run install:server\" \"npm run install:client\" --names \"server,client\" --prefix-colors \"blue,green\"",
    "setup": "npm run install:server && npm run install:client"
  },
  "keywords": [
    "todo",
    "server",
    "nodejs",
    "typescript",
    "monorepo"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^9.2.0"
  },
  "dependencies": {
    "sass": "^1.93.0"
  }
}
