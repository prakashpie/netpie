{
  "extends": ["@tsconfig/node22/tsconfig.json"],
  "compilerOptions": {
    "outDir": "./dist",
    "types": ["node", "vitest/globals"],
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
